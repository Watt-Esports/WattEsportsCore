@model WattEsportsCore.Models.Counterstrike

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Counterstrike</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IGN" class="control-label"></label>
                <input asp-for="IGN" class="form-control" />
                <span asp-validation-for="IGN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rank" class="control-label"></label>
                <input asp-for="Rank" class="form-control" />
                <span asp-validation-for="Rank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InGameRole" class="control-label"></label>
                <input asp-for="InGameRole" class="form-control" />
                <span asp-validation-for="InGameRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedTeamNumber" class="control-label"></label>
                <select asp-for="SelectedTeamNumber" asp-items="Model.TeamNumberItems"></select>
                <span asp-validation-for="SelectedTeamNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>  
            <div>
                @if (Model.ImageName == null)
                {
                    <img class="img-fluid rounded mb-3 img-thumbnail shadow-sm" style="height: 250px; width: 250px;" src="@("/images/teams/default_avatar.png")" alt="Card Image"/>
                }
                else
                {
                    <img class="img-fluid rounded mb-3 img-thumbnail shadow-sm" style="height: 250px; width: 250px;" src="@("/images/teams/counterstrike/" + Model.ImageName)" alt="Card Image"/>
                }
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

